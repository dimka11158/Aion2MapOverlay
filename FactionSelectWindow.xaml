<Window x:Class="Aion2MapOverlay.FactionSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aion2 Map Overlay"
        SizeToContent="Height" Width="680"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="#36393f" CornerRadius="8" BorderBrush="#202225" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#202225" CornerRadius="8,8,0,0" Padding="16,12">
                <Grid>
                    <TextBlock Text="Aion2 Map Overlay"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#ffffff"
                               VerticalAlignment="Center"/>
                    <Button x:Name="CloseButton"
                            Content="&#xE8BB;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="10"
                            Background="Transparent"
                            Foreground="#b9bbbe"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            Width="24" Height="24">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" Background="Transparent" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="#ed4245"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Margin="24,16,24,4">
                <TextBlock Text="Select Your Faction"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#ffffff"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Choose your faction to start the overlay"
                           FontSize="12"
                           Foreground="#b9bbbe"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="24,8,24,0">
                <CheckBox x:Name="MonolithCheckBox"
                          IsChecked="True"
                          Foreground="#ffffff"
                          Margin="0,0,24,0"
                          VerticalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="12" Height="12" Fill="#FF00FF" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Monolith (Feather)" Foreground="#ffffff" FontSize="12"/>
                    </StackPanel>
                </CheckBox>
                <CheckBox x:Name="HiddenCubeCheckBox"
                          IsChecked="True"
                          Foreground="#ffffff"
                          VerticalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="12" Height="12" Fill="#00FFFF" Margin="0,0,6,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Hidden Cube" Foreground="#ffffff" FontSize="12"/>
                    </StackPanel>
                </CheckBox>
            </StackPanel>

            <Border Grid.Row="3" Background="#2f3136" CornerRadius="4" Margin="24,12,24,0" Padding="12,8">
                <StackPanel>
                    <TextBlock Text="Gathering Materials" FontSize="12" FontWeight="SemiBold" Foreground="#b9bbbe" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox x:Name="OdyleCheckBox" Grid.Row="0" Grid.Column="0" Margin="0,4" VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#FFD700" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Odyle" Foreground="#ffffff" FontSize="11"/>
                            </StackPanel>
                        </CheckBox>
                        <CheckBox x:Name="OrichalcumOreCheckBox" Grid.Row="0" Grid.Column="1" Margin="0,4" VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#B87333" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Orichalcum Ore" Foreground="#ffffff" FontSize="11"/>
                            </StackPanel>
                        </CheckBox>
                        <CheckBox x:Name="DiamondGemstoneCheckBox" Grid.Row="0" Grid.Column="2" Margin="0,4" VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#B9F2FF" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Diamond Gemstone" Foreground="#ffffff" FontSize="11"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox x:Name="YggdrasilLogCheckBox" Grid.Row="1" Grid.Column="0" Margin="0,4" VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#228B22" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Yggdrasil Log" Foreground="#ffffff" FontSize="11"/>
                            </StackPanel>
                        </CheckBox>
                        <CheckBox x:Name="SapphireGemstoneCheckBox" Grid.Row="1" Grid.Column="1" Margin="0,4" VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#0F52BA" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Sapphire Gemstone" Foreground="#ffffff" FontSize="11"/>
                            </StackPanel>
                        </CheckBox>
                        <CheckBox x:Name="TargenaCheckBox" Grid.Row="1" Grid.Column="2" Margin="0,4" VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#FF7F50" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Targena" Foreground="#ffffff" FontSize="11"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox x:Name="CoriolusCheckBox" Grid.Row="2" Grid.Column="0" Margin="0,4" VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#9400D3" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Coriolus" Foreground="#ffffff" FontSize="11"/>
                            </StackPanel>
                        </CheckBox>
                        <CheckBox x:Name="RubyGemstoneCheckBox" Grid.Row="2" Grid.Column="1" Margin="0,4" VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#E0115F" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Ruby Gemstone" Foreground="#ffffff" FontSize="11"/>
                            </StackPanel>
                        </CheckBox>
                        <CheckBox x:Name="IninaCheckBox" Grid.Row="2" Grid.Column="2" Margin="0,4" VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#40E0D0" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Inina" Foreground="#ffffff" FontSize="11"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox x:Name="KukuruCheckBox" Grid.Row="3" Grid.Column="0" Margin="0,4" VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#FFA500" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Kukuru" Foreground="#ffffff" FontSize="11"/>
                            </StackPanel>
                        </CheckBox>
                        <CheckBox x:Name="MelaCheckBox" Grid.Row="3" Grid.Column="1" Margin="0,4" VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#32CD32" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Mela" Foreground="#ffffff" FontSize="11"/>
                            </StackPanel>
                        </CheckBox>
                        <CheckBox x:Name="AriaCheckBox" Grid.Row="3" Grid.Column="2" Margin="0,4" VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#FFB6C1" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Aria" Foreground="#ffffff" FontSize="11"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox x:Name="CypriCheckBox" Grid.Row="4" Grid.Column="0" Margin="0,4" VerticalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#00BFFF" Margin="0,0,6,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Cypri" Foreground="#ffffff" FontSize="11"/>
                            </StackPanel>
                        </CheckBox>
                    </Grid>
                </StackPanel>
            </Border>

            <Grid Grid.Row="4" Margin="24,8,24,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="ElyosButton"
                        Click="ElyosButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="#5865f2"
                                                CornerRadius="4"
                                                Padding="16,14">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="ELYOS"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="#ffffff"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="천족 / 天族"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="#dcddde"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#4752c4"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#3c45a5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="2"
                        x:Name="AsmodiansButton"
                        Click="AsmodiansButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="#ed4245"
                                                CornerRadius="4"
                                                Padding="16,14">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="ASMODIANS"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="#ffffff"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="마족 / 魔族"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="#dcddde"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#c73e41"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#a83539"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="4"
                        x:Name="AbyssButton"
                        Click="AbyssButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="#9b59b6"
                                                CornerRadius="4"
                                                Padding="16,14">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="ABYSS"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="#ffffff"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="심연 / 深淵"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="#dcddde"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#8e44ad"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#7d3c98"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <Border Grid.Row="5" Background="#2f3136" CornerRadius="0,0,8,8" Padding="12,10">
                <TextBlock Text="Right-click tray icon to exit"
                           FontSize="11"
                           Foreground="#72767d"
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>

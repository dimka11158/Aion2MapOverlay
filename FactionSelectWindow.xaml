<Window x:Class="Aion2MapOverlay.FactionSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aion2 Map Overlay"
        Height="240" Width="580"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="#36393f" CornerRadius="8" BorderBrush="#202225" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#202225" CornerRadius="8,8,0,0" Padding="16,12">
                <Grid>
                    <TextBlock Text="Aion2 Map Overlay"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="#ffffff"
                               VerticalAlignment="Center"/>
                    <Button x:Name="CloseButton"
                            Content="&#xE8BB;"
                            FontFamily="Segoe MDL2 Assets"
                            FontSize="10"
                            Background="Transparent"
                            Foreground="#b9bbbe"
                            BorderThickness="0"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            Width="24" Height="24">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" Background="Transparent" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="#ed4245"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Margin="24,16,24,4">
                <TextBlock Text="Select Your Faction"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#ffffff"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Choose your faction to start the overlay"
                           FontSize="12"
                           Foreground="#b9bbbe"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <Grid Grid.Row="2" Margin="24,8,24,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        x:Name="ElyosButton"
                        Click="ElyosButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="#5865f2"
                                                CornerRadius="4"
                                                Padding="16,14">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="ELYOS"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="#ffffff"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="천족 / 天族"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="#dcddde"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#4752c4"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#3c45a5"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="2"
                        x:Name="AsmodiansButton"
                        Click="AsmodiansButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="#ed4245"
                                                CornerRadius="4"
                                                Padding="16,14">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="ASMODIANS"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="#ffffff"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="마족 / 魔族"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="#dcddde"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#c73e41"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#a83539"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="4"
                        x:Name="AbyssButton"
                        Click="AbyssButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="#9b59b6"
                                                CornerRadius="4"
                                                Padding="16,14">
                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock Text="ABYSS"
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="#ffffff"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="심연 / 深淵"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="#dcddde"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#8e44ad"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#7d3c98"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <Border Grid.Row="3" Background="#2f3136" CornerRadius="0,0,8,8" Padding="12,10">
                <TextBlock Text="Right-click tray icon to exit"
                           FontSize="11"
                           Foreground="#72767d"
                           HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>
